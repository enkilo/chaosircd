srcdir               = @srcdir@
top_srcdir           = @top_srcdir@
builddir             = @builddir@
top_builddir         = @top_builddir@
thisdir              = tools/

sbin_EXEC = mkca mkcrt mkkeys mkreq sign openssl.cnf
bin_EXEC = chaosircd-config
EXEC = $(sbin_EXEC) $(bin_EXEC)

all: $(EXEC)
install: install-exec

include $(top_builddir)/config.mk

CLEANFILES = *~ mkca mkcrt mkkeys mkreq sign
DISTCLEANFILES = Makefile $(CLEANFILES) $(DATA) 
MAINTAINERCLEANFILES = $(DISTCLEANFILES)
DISTFILES = Makefile.in mkca.in mkcrt.in mkkeys.in mkreq.in sign.in openssl.cnf.in chaosircd-config.in
DEVFILES = CVS $(DISTFILES)
#INSTALL = @INSTALL@
#INSTALL_EXEC = $(INSTALL) -m 700

mkca: mkca.in $(top_builddir)/config.status
	@$(ECHO_CONFIG)
	@(cd $(top_srcdir) && ./config.status tools/mkca) >/dev/null
mkcrt: mkcrt.in $(top_builddir)/config.status
	@$(ECHO_CONFIG)
	@(cd $(top_srcdir) && ./config.status tools/mkcrt) >/dev/null
mkkeys: mkkeys.in $(top_builddir)/config.status
	@$(ECHO_CONFIG)
	@(cd $(top_srcdir) && ./config.status tools/mkkeys) >/dev/null
mkreq: mkreq.in $(top_builddir)/config.status
	@$(ECHO_CONFIG)
	@(cd $(top_srcdir) && ./config.status tools/mkreq) >/dev/null
sign: sign.in $(top_builddir)/config.status
	@$(ECHO_CONFIG)
	@(cd $(top_srcdir) && ./config.status tools/sign) >/dev/null
openssl.cnf: openssl.cnf.in $(top_builddir)/config.status
	@$(ECHO_CONFIG)
	@(cd $(top_srcdir) && ./config.status tools/openssl.cnf) >/dev/null
chaosircd-config: chaosircd-config.in $(top_builddir)/config.status
	@$(ECHO_CONFIG)
	@(cd $(top_srcdir) && ./config.status tools/chaosircd-config) >/dev/null

dep:

include $(top_builddir)/build.mk
