# $Id: Makefile.in,v 1.2 2006/09/27 11:35:55 roman Exp $
# ===========================================================================
#
# Makefile for libchaos/test subdirectory
#
# relative directories
# ---------------------------------------------------------------------------
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
thisdir      = test/

VPATH        = $(srcdir)

# include global make configuration
# ---------------------------------------------------------------------------
include $(top_builddir)/config.mk

# configuration for this directory
# ---------------------------------------------------------------------------
TESTS = cfgtest \
        giftest \
        graphtest \
        imagetest \
        ttftest

SOURCES = $(TESTS:%=%.c)
OBJECTS = $(TESTS:%=%.o)
PROGRAMS = $(TESTS)

# targets for this directory
# ---------------------------------------------------------------------------
all: Makefile $(TESTS)
install: install-exec

# build config
# ---------------------------------------------------------------------------
LDADD    += $(top_builddir)/src/libchaos.a
#LIB      += $(SSL_LIBS)
#LIB      += $(PSQL_LIBS)
#LIB      += $(MYSQL_LIBS)
ttftest: LIB      += $(FT2_LIBS)
LIB      += $(LIBS)
CFLAGS   += $(SSL_CFLAGS) $(PSQL_CFLAGS) $(MYSQL_CFLAGS) $(FT2_CFLAGS)
INCLUDES += -I$(top_srcdir)/include -I$(top_builddir)/include

# local make targets
# ---------------------------------------------------------------------------
%: %.c $(LDADD)
	@$(ECHO_CCLD)
	@QUIET@$(COMPLINK) -o $@ $^ $(LIB)

# include global make targets
# ---------------------------------------------------------------------------
include $(top_builddir)/build.mk
