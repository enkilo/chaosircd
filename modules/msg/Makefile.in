INCLUDES             = -I$(top_srcdir)/libchaos/include \
                       -I$(top_srcdir)/include \
                       -I../../libchaos/include \
                       -I../../include

SOURCES              = $(MODULES:%=%.c)
OBJECTS              = $(MODULES:%=%.o)
OBJEXT               = so
DEPS                 = $(MODULES:%=%.d)
SHOBJECTS            = $(MODULES:%=%.@PIE_EXEEXT@)
DSO                  = @DSO@

plugin_EXEC = $(SHOBJECTS)

@PIE_LIB@lib_EXEC = $(SHOBJECTS)
@PIE_LIB@all: shobjects
@PIE_LIB@install: install-pluginEXEC

@NO_PIE_LIB@all: $(CATEGORY).a
@NO_PIE_LIB@install:

$(CATEGORY).a: $(OBJECTS)
	@$(ECHO_AR)
	@$(RM) -f $@
	@$(AR) cru $@ $^
	@$(ECHO_RANLIB)
	@$(RANLIB) $@

shobjects: $(SHOBJECTS)

include $(top_builddir)/config.mk

#INSTALL = @INSTALL@

CLEANFILES           = *~ core core.* \
                       $(OBJECTS) $(SHOBJECTS)
DISTCLEANFILES       = Makefile $(CLEANFILES) $(DEPS)
MAINTAINERCLEANFILES = $(DISTCLEANFILES)
DISTFILES            = Makefile.in $(SOURCES)
DEVFILES             = CVS $(DISTFILES)

DEFS += -DBUILD_MODULE

@WIN32_TRUE@@SHARED_FALSE@LIBS += -L$(top_builddir)/src -lircd
@WIN32_TRUE@@SHARED_FALSE@LIBS += -L$(top_builddir)/libchaos/src -lchaos
@WIN32_TRUE@@SHARED_TRUE@LIBS += $(top_builddir)/src/ircd.dll
@WIN32_TRUE@@SHARED_TRUE@LIBS += $(top_builddir)/libchaos/src/chaos.dll

include $(top_builddir)/build.mk
