srcdir               = @srcdir@
top_srcdir           = @top_srcdir@
builddir             = @builddir@
top_builddir         = @top_builddir@
thisdir              = modules/usermode/

CATEGORY             = usermode
MODULES              = um_client \
                       um_invisible \
                       um_operator \
                       um_paranoid \
                       um_servnotice \
                       um_wallops \
                       um_crowdguard

INCLUDES             = -I$(top_srcdir)/libchaos/include \
                       -I$(top_srcdir)/include \
                       -I../../libchaos/include \
                       -I../../include

SOURCES              = $(MODULES:%=%.c)
OBJECTS              = $(MODULES:%=%.o)
OBJEXT               = so
DEPS                 = $(MODULES:%=%.d)
SHOBJECTS            = $(MODULES:%=%.@PIE_LIBEXT@)
DSO                  = @DSO@

@PIE_LIB@lib_EXEC = $(SHOBJECTS)
@PIE_LIB@all: shobjects
@PIE_LIB@install: install-pluginEXEC

plugin_EXEC = $(SHOBJECTS)

@NO_PIE_LIB@all: $(CATEGORY).a
@NO_PIE_LIB@install:

$(CATEGORY).a: $(OBJECTS)
	@$(ECHO_AR)
	@$(RM) -f $@
	@$(AR) $@ $^
	@$(ECHO_RANLIB)
	@$(RANLIB) $@

shobjects: $(SHOBJECTS)

include $(top_builddir)/config.mk

#INSTALL = @INSTALL@

CLEANFILES           = *~ core core.* \
                       $(OBJECTS) $(SHOBJECTS)
DISTCLEANFILES       = Makefile $(CLEANFILES) $(DEPS)
MAINTAINERCLEANFILES = $(DISTCLEANFILES)
DISTFILES            = Makefile.in $(SOURCES)
DEVFILES             = CVS $(DISTFILES)

DEFS += -DBUILD_MODULE

@WIN32_TRUE@LIBS += -L$(top_builddir)/src -lircd
@PIE_LIB@LIBS += -L$(top_builddir)/libchaos/src -lchaos

include $(top_builddir)/build.mk
