srcdir               = @srcdir@
top_srcdir           = @top_srcdir@
builddir             = @builddir@
top_builddir         = @top_builddir@
thisdir              = modules/usermode/

CATEGORY             = usermode
MODULES              = um_client \
                       um_invisible \
                       um_operator \
                       um_paranoid \
                       um_servnotice \
                       um_wallops \
                       um_crowdguard

INCLUDES             = -I$(top_srcdir)/lib/include/libchaos \
                       -I$(top_srcdir)/include \
                       -I../../lib/include/libchaos \
                       -I../../include

SOURCES              = $(MODULES:%=%.c)
OBJECTS              = $(MODULES:%=%.o)
OBJEXT               = so
DEPS                 = $(MODULES:%=%.d)
SHOBJECTS            = $(MODULES:%=%.@PIE_LIBEXT@)
DSO                  = @DSO@

@DLM_TRUE@plugin_EXEC = $(SHOBJECTS)
@DLM_TRUE@all: shobjects
@DLM_TRUE@install: install-pluginEXEC

plugin_PREFIX = /usermode
plugin_EXEC = $(SHOBJECTS)

@DLM_FALSE@all: $(CATEGORY).a
@DLM_FALSE@install:

$(CATEGORY).a: $(OBJECTS)
	@$(ECHO_AR)
	@$(RM) -f $@
	@$(AR) $@ $^
	@$(ECHO_RANLIB)
	@$(RANLIB) $@

shobjects: $(SHOBJECTS)

include $(top_builddir)/config.mk

#INSTALL = @INSTALL@

CLEANFILES           = *~ core core.* \
                       $(OBJECTS) $(SHOBJECTS)
DISTCLEANFILES       = Makefile $(CLEANFILES) $(DEPS)
MAINTAINERCLEANFILES = $(DISTCLEANFILES)
DISTFILES            = Makefile.in $(SOURCES)
DEVFILES             = CVS $(DISTFILES)

DEFS += -DBUILD_MODULE

@DLM_FALSE@DEFS += -DSTATIC_LIBCHAOS
@DLM_FALSE@DEFS += -DSTATIC_IRCD


@WIN32_TRUE@LIBS += -L$(top_builddir)/src -lircd
@SHARED_TRUE@@DLM_TRUE@LIBS += -L$(top_builddir)/lib/src -lchaos

include $(top_builddir)/build.mk
